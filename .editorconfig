# Tensor-Curie EditorConfig
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,h,hpp,inl}]
indent_style = space
indent_size = 2

[*.{hlsl,fx}]
indent_style = space
indent_size = 4

[CMakeLists.txt]
indent_style = space
indent_size = 4

[*.cmake]
indent_style = space
indent_size = 4

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.ps1]
indent_style = space
indent_size = 4

[*.{bat,cmd}]
end_of_line = crlf

[Makefile]
indent_style = tab
